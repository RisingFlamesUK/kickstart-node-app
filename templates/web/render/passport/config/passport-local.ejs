// config/passport-local.js
import passport from 'passport';
import { Strategy as LocalStrategy } from 'passport-local';
import { findUserByEmail } from './user-store.js';
import bcrypt from 'bcrypt';

export default function configureLocal() {
  passport.use(
    new LocalStrategy(
      { usernameField: 'email', passwordField: 'password' },
      async (email, password, done) => {
        try {
          const user = await findUserByEmail(email);
          if (!user) return done(null, false, { message: 'No such user' });

          const ok = await bcrypt.compare(password, user.password_hash);
          if (!ok) return done(null, false, { message: 'Invalid password' });

          return done(null, { id: user.id, email: user.email });
        } catch (err) {
          return done(err);
        }
      }
    )
  );
}
