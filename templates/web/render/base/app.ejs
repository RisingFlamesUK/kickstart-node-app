import express from 'express';
import dotenv from 'dotenv';
<% if (usePg) { %>import { database<% if (useSession) { %>, PGStore<% } %> } from './utils/database.js';<% } %>
<% if (useSession) { %>import session from 'express-session';
import generateSecret from './utils/encryption-handler.js';<% } %>

dotenv.config();

const app = express();

const PORT = process.env.PORT || 3000;

<% if (useSession) { %>
const sessionSecret = process.env.SESSION_SECRET || generateSecret();

app.use(
  session({
    secret: sessionSecret,
    resave: false,
    saveUninitialized: false,
    store: new PGStore({ pool: database }),
    cookie: {
      secure: false,
      path: '/',
      httpOnly: true,
    }
  })
);
<% } %>

app.use(express.urlencoded({ extended: true }));
app.use(express.json());
app.use(express.static('public'));
app.set('view engine', 'ejs');

app.get('/', (req, res) => {
  res.render('index.ejs', { title: 'Welcome' });
});


app.listen(PORT, () => {
  console.log("------------------------------------------------------");
  console.log(`|   ðŸš€ Server running on http://localhost:${PORT}    |`);
  console.log("------------------------------------------------------");
});

