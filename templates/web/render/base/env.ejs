<%_ /* this file is templates/web/render/base/env.ejs */ _%>
# This file is /.env
# Server
PORT=<%= port %>

<% if (usePg) { %>
# PostgreSQL
PG_USER=<%= pgUser %>
PG_PASS=<%= pgPassword %>   # ‚Üê leave blank locally; set in CI/production secrets
PG_DB=<%= pgDatabase %>
PG_PORT=<%= pgPort %>
PG_HOST=<%= pgHost %>
<% } else { %>
# PostgreSQL (disabled)
# PG_USER=
# PG_PASS=
# PG_DB=
# PG_PORT=5432
# PG_HOST=localhost
<% } %>

<% if (useSession) { %>
# Sessions
# SESSION_SECRET=            # optional; if not set, app generates a random secret at runtime
<% } %>

<% if (usePassport && passportStrategies && passportStrategies.length) { %>
# Passport OAuth provider settings (fill in if you enabled the provider)
<% if (passportStrategies.includes('google')) { %>
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:<%= port %>/auth/google/callback
<% } %>
<% if (passportStrategies.includes('facebook')) { %>
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_CALLBACK_URL=http://localhost:<%= port %>/auth/facebook/callback
<% } %>
<% if (passportStrategies.includes('twitter')) { %>
# TWITTER_CLIENT_ID=
# TWITTER_CLIENT_SECRET=
# TWITTER_CALLBACK_URL=http://localhost:<%= port %>/auth/twitter/callback
<% } %>
<% if (passportStrategies.includes('microsoft')) { %>
# MICROSOFT_CLIENT_ID=
# MICROSOFT_CLIENT_SECRET=
# MICROSOFT_CALLBACK_URL=http://localhost:<%= port %>/auth/microsoft/callback
<% } %>
<% if (passportStrategies.includes('linkedin')) { %>
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_CALLBACK_URL=http://localhost:<%= port %>/auth/linkedin/callback
<% } %>
<% if (passportStrategies.includes('steam')) { %>
# STEAM_API_KEY=
# STEAM_REALM=http://localhost:<%= port %>
# STEAM_RETURN_URL=http://localhost:<%= port %>/auth/steam/return
<% } %>
<% if (passportStrategies.includes('amazon')) { %>
# AMAZON_CLIENT_ID=
# AMAZON_CLIENT_SECRET=
# AMAZON_CALLBACK_URL=http://localhost:<%= port %>/auth/amazon/callback
<% } %>
<% } %>
